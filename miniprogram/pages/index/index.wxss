page {
  /* 设置页面样式 */
  height: 100%;
  background: rgb(245, 243, 243);
}

image {
  /* 设置图片样式 */
  width: 100%;
  height: 110px;
}


.hr {
  /* 设置水平线样式 */
  height: 2px;
  background-color: yellowgreen;
  margin: 10px 0;

}

.schedule{
  width: 100%;
  display: flex;
  justify-content: space-around;
  
}

.demo{
  width:calc(50% - 40rpx);
  margin:20rpx;
  flex-direction:column;
  display:flex;
}


.lineLayout {
  /* 设置text和input组件布局 */
  display: flex; /* 设置布局模式 */
  margin: 10px;
    border: 10px 10px;
}

text {
  /* 设置text组件样式 */
  float: left; /* 设置为左浮动 */
}

input {
  /* 设置input组件样式 */
  width: 180px;
  height: 30px;
  border-bottom: 2px solid blue;
  float: left; /* 设置为左浮动 */
}

input:hover {
  /*设置输入时input组件的样式*/
  border-bottom: 2px solid chocolate;
}

.button {
  /* 设置button组件样式 */
  width: 60px;
  margin: 20px auto; /*上下边距20px，左右边距自动（左右边距相等）*/
}

.txt {
  /* 设置信息提示区文本显示样式 */
  color: red;
  background: yellow;
}
.box { /**定义用于设置边框的样式**/
  margin: 20rpx; /**外边距**/
  padding: 20rpx; /**内边距**/
  border: 1px solid silver; /**边框1px、实线、银灰色**/
}
.box2 { /**定义用于设置边框的样式**/
  margin: 20rpx; /**外边距**/
  padding: 20rpx; /**内边距**/
  border: 1px; /**边框1px、实线、银灰色**/
}


.title {  /**定义用于设置标题的样式**/
  font-size: 25px; /**字体大小为25px**/
  text-align: center; /**文本水平对齐方式为居中**/
  margin-bottom: 15px; /**下外边距为15px**/
  color:black; /**颜色为红色**/
}
